{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS",
      "runtimeExecutable": "node",
      "args": ["-r", "ts-node/register", "-r", "tsconfig-paths/register", "src/main.ts"],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "smartStep": true,
      "restart": true,
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "outFiles": ["${workspaceFolder}/dist/*/.js"]
    }
  ]
}